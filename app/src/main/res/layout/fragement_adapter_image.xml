<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <android.support.v7.widget.CardView
        android:layout_margin="10dp"
        android:layout_height="match_parent"
        android:layout_width="match_parent"
        app:cardElevation="8dp"
        app:cardCornerRadius="10dp"
        android:layout_gravity="center"
        >
        <RelativeLayout

            android:layout_width="200dp"
            android:layout_height="wrap_content">
            <ImageView
                android:id="@+id/img"
                android:layout_height="@dimen/template_img_height"
                android:layout_width="190dp"
                android:background="#FFFFFF"

                ></ImageView>
            <ImageView

                android:id="@+id/mask"
                android:layout_height="@dimen/template_img_height"
                android:layout_width="190dp"
                android:background="@drawable/template_mask"
                ></ImageView>
            <TextView
                android:id="@+id/title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/mask"
                android:textColor="@color/colorTextTitle"
                android:textSize="11dip"
                android:text="Name post"
                android:layout_marginLeft="5dp" />
            <TextView
                android:id="@+id/description"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:maxLines="3"
                android:ellipsize="end"
                android:padding="10dp"
                android:layout_below="@+id/mask"
                android:text="This is the description of the  image number:"
                android:textColor="@color/colorText"
                />
        </RelativeLayout>


    </android.support.v7.widget.CardView>

</LinearLayout>